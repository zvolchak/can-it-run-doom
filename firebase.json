{
  "functions": [
    {
      "codebase": "api",
      "source": "./api",
      "predeploy": ["cd api && npm run build:prod"],
      "ignore": [
        "**/node_modules/**",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local",
        "public/**",
        "**/.*"
      ],
      "include": [
        "api/dist/**"
      ]
    },
    {
      "codebase": "webapp",
      "source": "./webapp",
      "predeploy": ["cd webapp && npm run build:prod"],
      "ignore": [
        "**/node_modules/**",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ]
    }
  ],
  "hosting": {
    "public": "./webapp/.next",
    "predeploy": ["cd webapp && npm run build:sitemap && npm run build:prod"],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "cleanUrls": true,
    "rewrites": [
      {
        "source": "**",
        "function": "nextServer"
      },
      {
          "source": "/_next/static/**",
          "destination": "/_next/static/*"
      },
      {
          "source": "/static/**",
          "destination": "/static/*"
      },
      {
        "source": "/favicon.ico",
        "destination": "/favicon.ico"
      }
    ]
  },
  "emulators": {
    "functions": {
      "port": 8080
    },
    "hosting": {
      "port": 3000
    },
    "ui": {
      "enabled": true
    },
    "firestore": {
      "port": 8081
    },
    "singleProjectMode": true
  }
}
